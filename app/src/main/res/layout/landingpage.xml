<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kortfrilogo"
        android:scaleType="fitXY"
        android:alpha="0.1"
        android:id="@+id/kvtLOGO"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/darkblue"
        android:scaleType="fitXY"
        android:id="@+id/GREYBLUR"
        android:alpha="0.9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/love"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/imageView3" />

    <TextView
        android:text="@string/Madewith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:id="@+id/MadeWith"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp" />

    <TextView
        android:text="@string/forKVT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/MadeWith"
        android:id="@+id/forKVT"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"/>

    <TextView
        android:text="@string/companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/MadeWith"
        android:id="@+id/companyname"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/forKVT"
        android:layout_toEndOf="@+id/forKVT"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_marginBottom="58dp"
        android:background="@drawable/my_button_bg"
        android:onClick="sendToSecondActivity"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="@string/Contactus"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:layout_alignLeft="@+id/secondheader"
        android:layout_alignStart="@+id/secondheader"
        android:layout_alignRight="@+id/secondheader"
        android:layout_alignEnd="@+id/secondheader" />

    <TextView
        android:text="@string/headerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="135dp"
        android:id="@+id/secondheader"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="KortFri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:textStyle="bold"
        android:id="@+id/ECARDHOLDER"
        android:textColor="@android:color/white"
        android:textSize="80sp"
        android:layout_above="@+id/secondheader"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="@string/login"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="36dp"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

</RelativeLayout>
